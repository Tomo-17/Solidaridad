import random
import time

# Tarjetas con situaciones de ayuda
tarjetas = [
    "Un compaÃ±ero se siente triste porque perdiÃ³ su juguete.",
    "Una amiga necesita ayuda para estudiar para un examen.",
    "Alguien no sabe cÃ³mo jugar a un nuevo juego.",
    "Un amigo se lesionÃ³ y necesita ayuda para llegar a casa.",
    "Una persona se siente sola y necesita alguien con quien hablar."
]

# Opciones de respuesta para cada tarjeta
opciones = [
    ["Buscar juntos el juguete", "Ignorar la situaciÃ³n", "Decirle que busque otro juguete"],
    ["Ayudarle a estudiar", "Decirle que no puedo ayudarle", "Darle mi libro y desearle suerte"],
    ["Explicarle cÃ³mo jugar", "Decirle que busque las reglas", "Invitarle a ver cÃ³mo juego"],
    ["Ayudarle a caminar", "Decirle que llame a alguien mÃ¡s", "Ofrecerle agua"],
    ["Invitarle a hablar conmigo", "Decirle que busque a otro amigo", "Ignorarla"]
]

# FunciÃ³n para mostrar las tarjetas y opciones
def mostrar_tarjeta(tarjeta, opciones):
    print(f"\nğŸƒ Tarjeta: {tarjeta}")
    for i, opcion in enumerate(opciones):
        print(f"{i+1}. {opcion}")
    print("Elige la opciÃ³n correcta (1/2/3): ")

# FunciÃ³n para evaluar la soluciÃ³n
def evaluar_solucion(opcion_correcta, eleccion):
    if eleccion == opcion_correcta:
        return True
    else:
        return False

# FunciÃ³n para jugar el juego
def jugar_juego():
    print("ğŸ® Â¡Bienvenido al juego 'Rescatadores de Amistad'!")
    print("Objetivo: Ayudar a las personas en diferentes situaciones.")
    print("Instrucciones: Lee la tarjeta, elige la mejor soluciÃ³n y acumula puntos.")
    
    puntos = 0
    for i in range(5):
        indice_tarjeta = random.randint(0, len(tarjetas) - 1)
        mostrar_tarjeta(tarjetas[indice_tarjeta], opciones[indice_tarjeta])
        
        eleccion = int(input("Tu elecciÃ³n: ")) - 1
        opcion_correcta = 0  # Suponiendo que la primera opciÃ³n siempre es la correcta
        
        if evaluar_solucion(opcion_correcta, eleccion):
            puntos += 1
            print("âœ… Â¡Bien hecho! Has ganado un punto.")
        else:
            print("âŒ Esa no es la mejor soluciÃ³n. Â¡Sigue intentÃ¡ndolo!")
        time.sleep(2)

    print(f"\nâœ¨ Â¡Juego terminado! Has obtenido {puntos} puntos. Â¡Gracias por jugar!")

# Iniciar el juego
jugar_juego()
